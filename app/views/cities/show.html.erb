<div class="container">
  <b><%= @city.name %><br>
</div>
<div class="buttons">
  <% if policy(@city).update? %>
    <%= link_to 'Edit', edit_city_path(@city), :class => "btn btn-warning"%>
    <%= link_to 'Delete', city_path(@city), :class => "btn btn-danger"%>
  <% end %>
  <%= link_to 'Back', cities_path, :class => "btn btn-default" %>
</div>
