<div class="container title">
  <h3><b><%= @city.name %></b></h3><br>
</div>
<div class="container">
  <strong>Categories:</strong>
  <% @city.categories.each do |category| %>
    <ul class="ctg">
      <li class="cat"><%= link_to category.name, city_category_path(@city, category) %></li>
    </ul>
  <%end%>
</div>
  <div class="buttons">
    <% if policy(@city).update? %>
      <%= link_to 'Edit', edit_city_path(@city), :class => "btn btn-warning"%>
      <%= link_to 'Delete', city_path(@city), :method => :delete, :class => "btn btn-danger"%>
      <%= link_to "New Category", new_category_path, :class => "btn btn-success" %>
    <% end %>
    <%= link_to 'Back', cities_path, :class => "btn btn-primary" %>
  </div>
</div>
