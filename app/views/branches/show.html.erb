<div class="container title">
  <h3><b><%= @branch.name %><br></h3>
</div>
<div class="container">
  <ul class="branch">
    <li><h4>Who:</h4><%= @branch.organization %></li><br>
    <li><h4>When:</h4><%= @branch.date.strftime("%b %e, %Y - %l:%M %P") %></li><br>
    <li><h4>Where:</h4><%= @branch.location %></li><br>
    <li><h4>Info:</h4><%= @branch.info %></li>
  </ul>
</div>

<!-- <div>
    <%= link_to "Load Comments", branch_comments_path(@branch), :class => "load_comments btn btn-default" %>
</div> -->

<div class="comments">
  <%= render :partial => @comment %>
</div>

<%= form_for([@branch, @comment]) do |f| %>
  <%= f.label :comment %><br>
  <%= f.text_area :content %><br>
  <%= f.submit :class => 'btn btn-default'%>
<% end %>

<div class="buttons">
  <% if policy(@branch).update? %>
    <%= link_to 'Edit', edit_city_category_branch_path(@city, @category, @branch), :class => "btn btn-warning"%>
    <%= link_to 'Delete', city_category_branch_path(@city, @category, @branch), :method => :delete, :class => "btn btn-danger"%>
  <% end %>
    <%= link_to 'Back', city_category_path(@city, @category), :class => "btn btn-primary" %>
</div>
