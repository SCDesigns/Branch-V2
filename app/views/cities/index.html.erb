<p class="lead">
  <strong>Welcome to Branch!<br> Please select your city.</strong>
</p>
<div class="container" id="city_mod">
  <% @cities.each do |city| %>
  <ul class="cont">
    <h3><li class="cont_item js-cat" data-id="<%= city.id %>"><%= link_to city.name, city_path(city) %></li></h3><br>
      <div>
          <ul class="ctg sub_container" id="ul-<%= city.id %>">
          </ul>
      </div>
  </ul>
  <% end %>
  <div class="buttons">
    <% if policy(@cities).new? %>
      <%= link_to 'New City', new_city_path, :class => "btn btn-default" %>
    <% end %>

  </div>
</div>
